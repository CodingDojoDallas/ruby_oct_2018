<!DOCTYPE html>
<html>
<head>
	<title>Show Dojo</title>
</head>
<body>
<h1><%= @show.branch %></h1>

<p>Address: <%= @show.street %></p>
<p>City: <%= @show.city %> State: <%= @show.state %></p>
<p><a href="/dojos">Home</a> | <a href="/dojos/<%= @show.id %>/edit">Edit</a></p>
<h3>Student Roster</h3>
<table>
  <tr>
    <th>First name</th>
    <th>Last name</th> 
    <th>email</th>
    <th>Actions</th>
  </tr>
  <% @students.each do |student| %>
  <tr>
    <td><%= student.first_name %></td>
    <td><%= student.last_name %></td> 
    <td><%= student.email %></td> 
    <td><a href="/dojos/<%= @show.id %>/students/<%= student.id %>">Show</a> | <a href="/dojos/<%= @show.id %>/students/<%= student.id %>/edit">Edit</a> | <a href="/dojos/<%= @show.id %>/students/<%= student.id %> " data-method='delete'>Destroy</a></td>
  </tr>
  <% end %>
</table>
<a href="/dojos">Home</a>
<a href="/dojos/<%= @show.id %>/students/new">Add Student</a>
</body>
</html>