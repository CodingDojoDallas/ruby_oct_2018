<!DOCTYPE html>
<html>
<head>
	<title>Show student</title>
</head>
<body>
 <h1><%= @dojo.city %>'s <%= @student.first_name %> <%= @student.last_name %></h1>

 <p><%= @student.email %></p>

 <h3>Cohort</h3>
 <table>
  <tr>
    <th>First name</th>
    <th>Last name</th> 
    <th>email</th>
  </tr>
  <% @cohorts.each do |cohort| %>
  	<% if cohort.id != @student.id %>
  <tr>
    <td><%= cohort.first_name %></td>
    <td><%= cohort.last_name %></td> 
    <td><%= cohort.email %></td> 
  </tr>
  <% end %>
  <% end %>
</table>
 <a href="/dojos/<%= @dojo.id %>">Home</a> | <a href="/dojos/<%= @dojo.id %>/students/<%= @student.id %>/edit">Edit</a>

</body>
</html>