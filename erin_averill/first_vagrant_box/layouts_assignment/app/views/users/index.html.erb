
<% content_for :left_column do %>
  <h1>All Users</h1>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Favorite Language</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.favorite_language %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<% content_for :right_column do %>
	<h1>Create a new user</h1>
	<form action="/" method="POST">
		<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
		<p>First Name: <input type="text" name="user[first_name]"></p>
		<p>Last Name: <input type="text" name="user[last_name]"></p>
		<p>Favorite Language: <input type="text" name="user[favorite_language]"></p>
		<button class="btn btn-info">Add</button>
	</form>
  <a href="/posts">See the posts</a>
	<% end %>