<html>
    <head>
        <title>Edit Student</title>
    </head>
    <body>
        <form action="/dojos/<%= @dojo.id%>/students/<%= @student.id%>" method="POST">
        <input type="hidden"  name="authenticity_token" value="<%= form_authenticity_token %>">
        <input type="hidden" name="_method" value="patch">
        <table>
            <tr><td>First Name:</td></tr>
            <tr><td><input type="text" name="student[first_name]" value="<%= @student.first_name %>"></td></tr>
            <tr><td>Last Name:</td></tr>
            <tr><td><input type="text" name="student[last_name]" value="<%= @student.last_name %>"></td></tr>
            <tr><td>Email:</td></tr>
            <tr><td><input type="text" name="student[email]" value="<%= @student.email%>"></td></tr>
            <tr><td>Dojo:</td></tr>
            <tr>
                <td>
                    <select name="student[dojo]">
                        <option value="<%= @dojo.id%>"><%= @dojo.city%></option>
                        <%@all.each do |x|%>
                            <option value="<%= x.id%>"><%= x.city%></option>
                        <%end%>
                    </select>
                </td>
            </tr>
        </table>
        <button type="submit">Update</button>
        </form>
        <a href="/dojos/<%= @dojo.id%>/students">Home</a>

    </body>
</html>